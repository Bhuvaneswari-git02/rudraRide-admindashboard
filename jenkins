pipeline {
    agent any

    environment {
        COMPOSE_DIR   = "backend"
        SONAR_SCANNER = tool 'SonarScanner'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Bhuvaneswari-git02/rudraRide-admindashboard.git'
            }
        }

        stage('Verify Docker') {
            steps {
                sh 'docker version'
                sh 'docker compose version'
            }
        }

        stage('SonarQube Scan') {
            steps {
                withSonarQubeEnv('SonarQubeServer') {
                    withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
                        sh '''
                          ${SONAR_SCANNER}/bin/sonar-scanner \
                            -Dsonar.projectKey=rudraRide-admindashboard \
                            -Dsonar.projectName="RudraRide Admin Dashboard" \
                            -Dsonar.sources=. \
                            -Dsonar.login=$SONAR_TOKEN
                        '''
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Stop Existing Containers') {
            steps {
                dir("${COMPOSE_DIR}") {
                    sh 'docker compose down || true'
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                dir("${COMPOSE_DIR}") {
                    sh 'docker compose build'
                }
            }
        }

        stage('Deploy Containers') {
            steps {
                dir("${COMPOSE_DIR}") {
                    sh 'docker compose up -d'
                }
            }
        }
    }

    post {
        success {
            echo '✅ SonarQube PASSED — Deployment successful'
        }
        failure {
            echo '❌ Quality Gate FAILED — Deployment stopped'
        }
    }
}
