pipeline {
    agent any

    environment {
        COMPOSE_DIR   = "backend"
        IMAGE_NAME    = "rudraride-admin"
        IMAGE_TAG     = "latest"
        SONAR_SCANNER = tool 'SonarScanner'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Bhuvaneswari-git02/rudraRide-admindashboard.git'
            }
        }

        stage('Verify Tools') {
            steps {
                sh 'docker version'
                sh 'docker compose version'
                sh 'trivy --version'
            }
        }

        stage('SonarQube Scan') {
            steps {
                withSonarQubeEnv('SonarQubeServer') {
                    withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
                        sh '''
                          ${SONAR_SCANNER}/bin/sonar-scanner \
                            -Dsonar.projectKey=rudraRide-admindashboard \
                            -Dsonar.projectName="RudraRide Admin Dashboard" \
                            -Dsonar.sources=. \
                            -Dsonar.login=$SONAR_TOKEN
                        '''
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Docker Build Image') {
            steps {
                dir("${COMPOSE_DIR}") {
                    sh '''
                    echo "üê≥ Building Docker image..."
                    docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                    docker images | grep ${IMAGE_NAME}
                    '''
                }
            }
        }

        stage('Trivy Image Scan') {
            steps {
                sh '''
                echo "üîê Running Trivy security scan..."
                trivy image --severity HIGH,CRITICAL --exit-code 1 ${IMAGE_NAME}:${IMAGE_TAG}
                '''
            }
        }

        stage('Deploy Containers') {
            steps {
                dir("${COMPOSE_DIR}") {
                    sh '''
                    docker compose down || true
                    docker compose up -d
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ SonarQube PASSED + Trivy CLEAN ‚Äî Deployment successful'
        }
        failure {
            echo '‚ùå Security checks FAILED ‚Äî Deployment stopped'
        }
    }
}
