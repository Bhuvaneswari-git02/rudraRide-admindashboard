pipeline {
    agent any

    environment {
        COMPOSE_DIR = "backend"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Bhuvaneswari-git02/rudraRide-admindashboard.git'
            }
        }

        stage('Verify Docker') {
            steps {
                sh 'docker version'
                sh 'docker ps'
            }
        }

        stage('Stop Existing Containers') {
            steps {
                dir("${COMPOSE_DIR}") {
                    sh 'docker-compose down || true'
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                dir("${COMPOSE_DIR}") {
                    sh 'docker-compose build'
                }
            }
        }

        stage('Deploy Containers') {
            steps {
                dir("${COMPOSE_DIR}") {
                    sh 'docker-compose up -d'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Application deployed successfully'
        }
        failure {
            echo '❌ Deployment failed'
        }
    }
}
