pipeline {
    agent any

    environment {
        COMPOSE_DIR = "backend"
        SONAR_PROJECT_KEY = "rudraRide-admindashboard"
        SONAR_PROJECT_NAME = "rudraRide Admin Dashboard"
        SONAR_SCANNER = tool 'SonarScanner'
        SONARQUBE_ENV = 'SonarQubeServer'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Bhuvaneswari-git02/rudraRide-admindashboard.git'
            }
        }

        stage('Verify Docker') {
            steps {
                sh 'docker version'
                sh 'docker compose version'
            }
        }

        /* =======================
           SONARQUBE STATIC ANALYSIS
           ======================= */
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv("${SONARQUBE_ENV}") {
                    sh """
                    ${SONAR_SCANNER}/bin/sonar-scanner \
                      -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                      -Dsonar.projectName="${SONAR_PROJECT_NAME}" \
                      -Dsonar.sources=.
                    """
                }
            }
        }

        /* =======================
           SONARQUBE QUALITY GATE
           ======================= */
        stage('SonarQube Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        /* =======================
           TRIVY FILESYSTEM SCAN
           ======================= */
        stage('Trivy Filesystem Scan') {
            steps {
                sh '''
                trivy fs . \
                  --exit-code 1 \
                  --severity HIGH,CRITICAL \
                  --no-progress
                '''
            }
        }

        /* =======================
           STOP OLD CONTAINERS
           ======================= */
        stage('Stop Existing Containers') {
            steps {
                dir("${COMPOSE_DIR}") {
                    sh 'docker compose down || true'
                }
            }
        }

        /* =======================
           BUILD IMAGES
           ======================= */
        stage('Build Docker Images') {
            steps {
                dir("${COMPOSE_DIR}") {
                    sh 'docker compose build'
                }
            }
        }

        /* =======================
           TRIVY IMAGE SCAN
           ======================= */
        stage('Trivy Image Scan') {
            steps {
                sh '''
                docker images --format "{{.Repository}}:{{.Tag}}" | grep -v "<none>" | while read image; do
                    trivy image "$image" \
                      --exit-code 1 \
                      --severity CRITICAL,HIGH \
                      --no-progress
                done
                '''
            }
        }

        /* =======================
           DEPLOY CONTAINERS
           ======================= */
        stage('Deploy Containers') {
            steps {
                dir("${COMPOSE_DIR}") {
                    sh 'docker compose up -d'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Deployment successful with Quality Gates passed'
        }
        failure {
            echo '❌ Pipeline failed (Quality Gate / Security issues)'
        }
    }
}
