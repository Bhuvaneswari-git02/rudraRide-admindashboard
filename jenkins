pipeline {
    agent any

    environment {
        COMPOSE_DIR = "backend"

        SONAR_PROJECT_KEY  = "rudraRide-admindashboard"
        SONAR_PROJECT_NAME = "RudraRide Admin Dashboard"
        SONAR_SCANNER = tool 'SonarScanner'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Bhuvaneswari-git02/rudraRide-admindashboard.git'
            }
        }

        stage('SonarQube Scan') {
    steps {
        withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
            sh '''
              sonar-scanner \
              -Dsonar.projectKey=rudraRide-admindashboard \
              -Dsonar.projectName="RudraRide Admin Dashboard" \
              -Dsonar.sources=. \
              -Dsonar.host.url=http://<EC2-IP>:9000 \
              -Dsonar.login=$SONAR_TOKEN
            '''
        }
    }
}


        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Build & Deploy') {
            steps {
                dir("${COMPOSE_DIR}") {
                    sh '''
                    docker compose down || true
                    docker compose build
                    docker compose up -d
                    '''
                }
            }
        }
    }

    post {
        success {
            echo '✅ SonarQube Quality Gate PASSED'
        }
        failure {
            echo '❌ Quality Gate FAILED — Deployment stopped'
        }
    }
}
